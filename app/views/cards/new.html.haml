.weaper
  =render 'users/side-bar'

  .card
    .card__title
      クレジットカード情報入力
    .card__content
      .card__content__form
        %form.cards-number
          %label.card-info
            カード番号
          %span.card-required
            必須
        %input{type: "text", name: "credit-card-number", class: "credit-card-number", placeholder: "半角数字のみ", maxlength: "16"}
        %ul.card-type
          %li
            %img{src: '//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?1398199435', width: "49",height: "20"}
          %li
            %img{src: '//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?1398199435', width: "34",height: "20"}
          %li
            %img{src: '//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?1398199435', width: "30",height: "20"}
          %li
            %img{src: '//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?1398199435', width: "32",height: "20"}
          %li
            %img{src: '//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?1398199435', width: "21",height: "20"}
          %li
            %img{src: '//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?1398199435', width: "31",height: "20"}
          %li
            %img{src: '//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?1398199435', width: "31",height: "20"}

        .expiration-date
          .expiration-date__form
            %form.cards-number
              %label.card-info
                有効期限
              %span.card-required
                必須
              %br
                .expiration
                  .expiration-select
                    %select{name: "manth", class: "expiration-select__tag"}
                      %option{value: "01"} 01
                      %option{value: "02"} 02 
                      %option{value: "03"} 03 
                      %option{value: "04"} 04 
                      %option{value: "05"} 05 
                      %option{value: "06"} 06 
                      %option{value: "07"} 07 
                      %option{value: "08"} 08 
                      %option{value: "09"} 09 
                      %option{value: "10"} 10 
                      %option{value: "11"} 11
                      %option{value: "12"} 12 
                  %p.expiration__text
                    月
                  .expiration-select
                    %select{name: "year", class: "expiration-select__tag"}
                      %option{value: "20"} 20 
                      %option{value: "21"} 21 
                      %option{value: "22"} 22 
                      %option{value: "23"} 23 
                      %option{value: "24"} 24 
                      %option{value: "25"} 25 
                      %option{value: "26"} 26 
                      %option{value: "27"} 27 
                      %option{value: "28"} 28 
                      %option{value: "29"} 29 
                      %option{value: "30"} 30
                  %p.expiration__text
                    年

        .securitycode
          .securitycode__form
            %form.cards-number
              %label.card-info
                セキュリティコード
              %span.card-required
                必須
            %input{type: "text", name: "credit-card-number", class: "credit-card-number", placeholder: "カード背面4桁もしくは3桁の番号", maxlength: "4"}
        
        .what-securitycode
          .what-securitycode__text
            %span.what-securitycode__text__question
              ？
            %label.what-securitycode__text__sentence
              カード裏面の番号とは？
        
        .card-button
          %button{type: "submit", class: "card-registration-btn"}
            追加する



