.nav-bar
  %ol
    %li.nav-var
      =link_to "#", class: "nav-var-text" do
        メルカリ
    %i.fas.fa-chevron-right
    %li.nav-var
      =link_to "#", class: "nav-var-text" do
        マイページ
    %i.fas.fa-chevron-right
    %li.nav-ber-active
      クレジットカード情報入力

.mypagewrapper
  =render 'module/side-bar'

  .card
    .card__title
      クレジットカード情報入力
    .card__content
      .card__content__form
        = form_tag(cards_path, method: :post, id: 'charge-form',  name: "inputForm") do
          .cards-number
            %label.card-info
              カード番号
            %span.card-required
              必須
          = text_field_tag "card_number", "", class: "credit-card-number", placeholder: "半角数字のみ" ,maxlength: "16"
          %ul.card-type
            %li
              %img{src: '//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?1398199435', width: "49",height: "20"}
            %li
              %img{src: '//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?1398199435', width: "34",height: "20"}
            %li
              %img{src: '//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?1398199435', width: "30",height: "20"}
            %li
              %img{src: '//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?1398199435', width: "32",height: "20"}
            %li
              %img{src: '//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?1398199435', width: "21",height: "20"}
            %li
              %img{src: '//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?1398199435', width: "31",height: "20"}
            %li
              %img{src: '//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?1398199435', width: "31",height: "20"}

          .expiration-date
            .expiration-date__form
              .cards-number
                %label.card-info
                  有効期限
                %span.card-required
                  必須
                %br
                  .expiration
                    .expiration-select
                      %select#expiration_month{name: "expiration_month", type: "text", class: "expiration-select__tag"}
                        %option{value: ""} --
                        %option{value: "1"}01
                        %option{value: "2"}02
                        %option{value: "3"}03
                        %option{value: "4"}04
                        %option{value: "5"}05
                        %option{value: "6"}06
                        %option{value: "7"}07
                        %option{value: "8"}08
                        %option{value: "9"}09
                        %option{value: "10"}10
                        %option{value: "11"}11
                        %option{value: "12"}12
                    %p.expiration__text
                      月
                    .expiration-select
                      %select#expiration_year{name: "expiration_year", type: "text", class: "expiration-select__tag"}
                        %option{value: ""} --
                        %option{value: "2020"}20
                        %option{value: "2021"}21
                        %option{value: "2022"}22
                        %option{value: "2023"}23
                        %option{value: "2024"}24
                        %option{value: "2025"}25
                        %option{value: "2026"}26
                        %option{value: "2027"}27
                        %option{value: "2028"}28
                        %option{value: "2029"}29
                        %option{value: "2030"}30
                    %p.expiration__text
                      年

          .securitycode
            .securitycode__form
              .cards-number
                %label.card-info
                  セキュリティコード
                %span.card-required
                  必須
              = text_field_tag "secret_code", "", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "secret_code", class: 'credit-card-number'

          .what-securitycode
            .what-securitycode__text
              %span.what-securitycode__text__question
                ？
              %label.what-securitycode__text__sentence
                カード裏面の番号とは？

          .card-button
            #card_token
            = submit_tag "登録する", id: "card_token_submit", class: 'card-registration-btn'